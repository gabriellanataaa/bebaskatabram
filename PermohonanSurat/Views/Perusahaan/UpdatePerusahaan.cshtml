@model PermohonanSurat.Models.Perusahaan
@{
    Layout = "_Layout";
    ViewData["Title"] = "Add Perusahaan";
}


<h1>Update Perusahaan</h1>

<form asp-action="Update">
    <input type="hidden" asp-for="IdPerusahaan" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="NamaPerusahaan" class="control-label"></label>
        <input asp-for="NamaPerusahaan" class="form-control" />
        <span asp-validation-for="NamaPerusahaan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AlamatPerusahaan" class="control-label"></label>
        <input asp-for="AlamatPerusahaan" class="form-control" />
        <span asp-validation-for="AlamatPerusahaan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="JumlahPerusahaan" class="control-label"></label>
        <input asp-for="JumlahPerusahaan" class="form-control" />
        <span asp-validation-for="JumlahPerusahaan" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
</form>
